<Window x:Class="PokemonGame.Catching"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PokemonGame"
        mc:Ignorable="d"
        Title="Catching" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="ForestCanvas" HorizontalAlignment="Left" Height="333" Margin="81,23,0,0" VerticalAlignment="Top" Width="535" MouseDown="ForestCanvanClicked">
            <Image x:Name="Forest" Height="333" Width="535" Source="/Image/forestimg.png" Canvas.Top="0" Canvas.Left="0" MouseMove="ForestCanvasMouseMove"/>
            <Image x:Name="Pokemon_Img" Height="40" Width="40" Canvas.Left="248" Canvas.Top="104"/>
            <Image x:Name="NormalBall" Height="40" Canvas.Top="270" Width="40" Source="/Image/NormalBall.png" Canvas.Left="248" />
        </Canvas>
        <Button x:Name="Leave_Button" Content="Leave" HorizontalAlignment="Left" Margin="660,358,0,0" VerticalAlignment="Top" Width="75" Click="Leave_Click"/>
        <TextBlock x:Name="ForestLocation" HorizontalAlignment="Left" Margin="671,68,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
